<form method="POST" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h1>Recipes</h1>
  <label>Name</label>
  <input id="name" type="text" value="<%= @recipe.name %>" name="name">
  <label>Ingredients</label>
  <input id="ingredients" type="text" value="<%= @recipe.ingredients %>" name="ingredients">
  <label>Cook Time</label>
  <input id="cook_time" type="text" value="<%= @recipe.cook_time %>" name="cook_time">
  <input type="submit" value="submit">
</form>
